{
  "pacman": {
    "hooks": "pacman/hooks.sh",
    "installdir": "/services/{{name}}/frontend",
    "content": {
      "${installdir}/": {
        "base": "public"
      },
      "/etc/nginx/config.d/${name}.conf": "pacman/nginx.conf"
    },
    "depends": {
      "nginx-mainline": ">=1.17.9"
    }
  },
  "template": {
    "usedBy": [
      "arlac77/template-kronos-app",
      "arlac77/template-web-app"
    ]
  }
}
